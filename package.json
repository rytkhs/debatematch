{
    "name": "debate-match",
    "version": "1.0.0",
    "description": "DebateMatch - オンラインディベートプラットフォーム。リアルタイムディベート機能とAI評価システムを提供します。",
    "author": "tkhs",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/rytkhs/debatematch.git"
    },
    "keywords": [
        "debate",
        "ai",
        "realtime",
        "laravel",
        "livewire",
        "discussion",
        "education"
    ],
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "test": "jest --silent",
        "test:watch": "jest --watch --silent",
        "test:coverage": "jest --coverage --silent",
        "test:quick": "jest --passWithNoTests --maxWorkers=2 --silent",
        "test:ci": "jest --coverage --watchAll=false --maxWorkers=2 --silent",
        "test:debug": "jest --no-cache --verbose --silent=false",
        "test:personal": "jest --coverage --silent --maxWorkers=1",
        "test:focused": "jest --testNamePattern --silent",
        "test:file": "jest --testPathPattern --silent",
        "test:minimal": "jest --passWithNoTests --silent --maxWorkers=1 --coverage=false",
        "lint": "eslint resources/js/**/*.js",
        "lint:fix": "eslint resources/js/**/*.js --fix",
        "format": "prettier --write resources/js/**/*.js",
        "format:check": "prettier --check resources/js/**/*.js",
        "quality": "npm run lint && npm run test:minimal",
        "quality:full": "npm run lint && npm run test:personal"
    },
    "devDependencies": {
        "@babel/core": "^7.27.4",
        "@babel/preset-env": "^7.27.2",
        "@eslint/js": "^9.28.0",
        "@tailwindcss/forms": "^0.5.2",
        "@testing-library/jest-dom": "^6.1.4",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.7.4",
        "babel-jest": "^29.7.0",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "laravel-echo": "^1.16.1",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.31",
        "pusher-js": "^8.4.0-rc2",
        "tailwindcss": "^3.1.0",
        "vite": "^5.0"
    },
    "dependencies": {
        "@tailwindcss/typography": "^0.5.16"
    }
}
